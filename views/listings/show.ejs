<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details: </h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show_img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= listing.title %>
                    </b>
                    <br>
                    <%= listing.description %>
                        <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %>
                            <br>
                            <%= listing.location %>
                                <br>
                                <%= listing.country %>
                </p>
            </div>
        </div>
        <br>
    </div>
    <div class="btns mb-3  ">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn mb-3">Edit</a>

        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark  offset-5 mb-3">Delete</button>
        </form>
        <br>
        <br>
    </div>