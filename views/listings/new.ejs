<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create a New Listing</h3>
                <form action="/listings" method="post" class="needs-validatio" novalidate>


                    <!-- insteat of fetching title and description and remaining one by one 
        fetch it like create a listing[title], listing[description] so, that
        it become the key value pair of listing -->

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="Add a catcy title" type="text" class="form-control" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter description"
                            class="form-control" required></textarea>
                            <div class="invalid-feedback">Please enter a short description</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input name="listing[image]" placeholder="Enter image URL/Link" type="text"
                            class="form-control" required>
                        <div class="valid-feedback">Url should be valid!</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="Enter a sample price" type="number" class="form-control" required>
                            <div class="valid-feedback">Price should be valid!</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                            <div class="valid-feedback">Country should be valid!</div>
                        </div>

                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Nellore, Andhra Pradesh" type="text" class="form-control" required>
                        <div class="valid-feedback">Location should be valid!</div>
                    </div>

                    <button class="btn btn-dark add-btn mt-3">Add</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>

    </body>